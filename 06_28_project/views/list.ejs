<!-- list.ejs -->
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>

    <%- include('menu.html') %>
    <table class="table table-hover table-striped text-center container mt-4" style="border: 1px solid;">
        <thead>
          <tr>
            <th>자산명</th>
            <th>자산유형</th>
            <th>자산가치</th>
            <th>위험도</th>
            <th>수익성</th>
            <th>취득일</th>
            <th>수정</th>
            <th>삭제</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < data.length; i++){ %>
            <tr>
              <td data-bs-toggle="modal" data-bs-target="#myModal">
                <a href="#" onclick="modal_content(`<%= data[i].id %>`,`<%= data[i].name %>`,`<%= data[i].type %>`, `<%= data[i].value %>`, `<%= data[i].risk %>`, `<%= data[i].returned %>`, `<%= data[i].date %>`)"><%= data[i].name %></a>
              </td>
              <td><%= data[i].type %></td>
              <td><%= data[i].value %></td>
              <td><%= data[i].risk %></td>
              <td><%= data[i].returned %></td>
              <td><%= data[i].date %></td>
              <td><button class='edit btn btn-outline-warning' data-id='<%= data[i].id %>'>수정</button></td>
              <td><button class='delete btn btn-outline-danger' data-id='<%= data[i].id %>'>삭제</button></td>
            </tr>
          <% } %>
        </tbody>
    </table>

    <div class="container my-3">
      <button class="add btn btn-primary" style="float:right;">자산 추가</button>
    </div>

    <!-- modal -->
    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
        
                <!-- Modal Header -->
                <div class="modal-header">
                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label">자산명</label>
                        <h2 class="modal-title" name="title" id="modalTitle">자산명</h2>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
        
                <!-- Modal body -->
                <div class="modal-body" id="modalBody">
                    <div class="mb-3">
                        <label for="exampleFormControlInput2" class="form-label">자산유형</label>
                        <h5 class="modal-title" name="type" id="modalType"></h5>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput3" class="form-label">자산가치</label>
                        <h5 class="modal-title" name="price" id="modalPrice"></h5>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput4" class="form-label">위험도</label>
                        <h5 class="modal-title" name="risk" id="modalRisk"></h5>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput5" class="form-label">수익성</label>
                        <h5 class="modal-title" name="returned" id="modalReturned"></h5>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlInput7" class="form-label">취득일</label>
                        <h5 class="modal-title" name="date" id="modalDate"></h5>
                    </div>
                </div>
        
                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">닫기</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script>
        function modal_content(id, name, type, value, risk, returned, date) {
            $("#modalTitle").text(name);
            $("#modalType").text(type);
            $("#modalPrice").text(value);
            $("#modalRisk").text(risk);
            $("#modalReturned").text(returned);
            $("#modalDate").text(date);
        }

        $(".edit").click(function(e){
            let assetId = e.target.dataset.id;
            let reason = prompt("수정 요청 사유를 입력해주세요:");
            if (reason) {
                $.post("/request-edit", { assetId: assetId, reason: reason }, function(data) {
                    alert(data.message);
                });
            }
        });

        $(".delete").click(function(e){
            let assetId = e.target.dataset.id;
            let reason = prompt("삭제 요청 사유를 입력해주세요:");
            if (reason) {
                $.post("/request-delete", { assetId: assetId, reason: reason }, function(data) {
                    alert(data.message);
                });
            }
        });

        $(".add").click(function(){
            let reason = prompt("추가 요청 사유를 입력해주세요:");
            if (reason) {
                $.post("/request-add", { reason: reason }, function(data) {
                    alert(data.message);
                });
            }
        });
    </script>
</body>
</html>
